DOT=$HOME/.dotfiles
ZSH=$DOT/zsh

if [ "$TERM" = "xterm" ]; then
  export TERM='xterm-256color'
fi

fpath=("$ZSH/plugins/completions/src" $fpath)

source $DOT/bash/aliases
source $ZSH/lib/environment.zsh
source $ZSH/lib/git.zsh
source $ZSH/lib/bindings.zsh
source $ZSH/lib/history.zsh
source $ZSH/lib/title.zsh
source $ZSH/lib/spectrum.zsh
source $ZSH/lib/completion.zsh
source $ZSH/lib/prompt.zsh
source $ZSH/lib/node.zsh
source $ZSH/lib/ruby.zsh

# Plugins
source $ZSH/plugins/syntax-highlighting/zsh-syntax-highlighting.zsh
source $ZSH/plugins/history-substring-search/zsh-history-substring-search.zsh
source $ZSH/plugins/z/z.sh

# # Use modern completion system
autoload -Uz compinit
compinit -i

set -o emacs

# Portal FTW!
print -P "%F{231}GLaDOS v1.09 (c) 1982 Aperture Science, Inc.%f"

[[ -e "$HOME/.zshrc.local" ]] && source $HOME/.zshrc.local
