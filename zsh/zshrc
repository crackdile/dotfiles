ZSH=$HOME/.dotfiles/zsh
export TERM='xterm-256color'

fpath=("$ZSH/plugins/completions/src" $fpath)

# Load all of the config files in ~/oh-my-zsh that end in .zsh
# TIP: Add files you don't want in git to .gitignore
for config_file ($ZSH/lib/*.zsh); do
  source $config_file
done
unset config_file

# Plugins
source $ZSH/plugins/syntax-highlighting/zsh-syntax-highlighting.zsh
source $ZSH/plugins/history-substring-search/zsh-history-substring-search.zsh

# Use modern completion system
autoload -Uz compinit
compinit -i

# Portal FTW!
print -P "%F{231}GLaDOS v1.09 (c) 1982 Aperture Science, Inc.%f\n"
